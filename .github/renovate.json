{
  "tekton": {
    "enabled": true,
    "automergeType": "pr",
    "automerge": true,
    "platformAutomerge": true
  },
  "customManagers": [
    {
        "fileMatch": [
            "^Dockerfile$"
        ],
        "customType": "regex",
        "datasourceTemplate": "github-tags",
        "depNameTemplate": "konflux-ci/rpm-lockfile-prototype",
        "matchStrings": [
            "ARG RPM_LOCKFILE_PROTOTYPE_VERSION=(?<currentValue>[\\d\\.]+)"
        ],
        "versioningTemplate": "semver"
    },
    {
        "fileMatch": [
            "^Dockerfile$"
        ],
        "customType": "regex",
        "datasourceTemplate": "github-tags",
        "depNameTemplate": "renovatebot/renovate",
        "matchStrings": [
            "ARG RENOVATE_VERSION=(?<currentValue>[\\d\\.]+)"
        ],
        "versioningTemplate": "semver"
    },
    {
        "fileMatch": [
            "^Dockerfile$"
        ],
        "customType": "regex",
        "datasourceTemplate": "npm",
        "depNameTemplate": "node",
        "matchStrings": [
            "ARG NODEJS_VERSION=(?<currentValue>[\\d\\.]+)"
        ],
        "versioningTemplate": "npm"
    }
  ]
}
